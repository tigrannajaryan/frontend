{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": ["angular-tslint-rules"],
  "rules": {
    "array-type": [true, "array-simple"],
    "component-selector": [false, "TODO: disabled temporarily. see http://codelyzer.com/rules/component-selector/ for more details and to enable."],
    "curly": true,
    "directive-selector": [true, "attribute", ["ngx", "test", "made"], "camelCase"],
    "i18n": [true, "check-id"],
    "newline-before-return": false,
    "newline-per-chained-call": false,
    "no-duplicate-variable": true,
    "no-implicit-dependencies": false,
    "no-unused-variable": [true],
    "prefer-conditional-expression": false,
    "trackBy-function": [false, "TODO: unclear if trackBy universaly needed. Will explore this later."]
  }
}
