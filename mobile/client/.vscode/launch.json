{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Client: Run in Chrome against localhost:8100",
      "url": "http://localhost:8100",
      "webRoot": "${workspaceFolder}/www",
    },
    {
      "name": "Client: Run Android",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Client: Run Android production",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "runArguments": ["--prod"]
    },
    {
      // See http://blog.mlewandowski.com/Debugging-Karma-tests-with-VSCode.html
      // for instructions on how to debug Karma tests.
      "type": "chrome",
      "request": "attach",
      "name": "Client: Attach to Karma Chrome",
      "port": 9333,
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/": "${workspaceRoot}",
        "/base/": "${workspaceRoot}/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Client: Run e2e tests",
      "program": "${workspaceRoot}/node_modules/protractor/bin/protractor",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/protractor.conf.js",
        // "--specs=e2e/first-use-invited-flow.e2e-spec.ts"
      ],
      "env": {
        // This is needed to make files in "shared/e2e" symlinked directory work
        "NODE_PRESERVE_SYMLINKS": "1"
      }
    }
  ]
}